<% include ../partials/head.ejs %>
<title> Register on Gamerdate </title>
</head>
<body class="no-js">
	<header>
		<% include ../partials/header.ejs %>
		<h1>Gamerdate<span>Register</span></h1>
	</header>
	<main>

		<section class="user-input">
			<form id="register-slider" action=/account/register method=post>

				<fieldset class="fieldset1" id="fieldset1id">
					<legend>General</legend>
					<label for='name'> First Name:</label>
					<input required type='text' name='name' id='name' accept='text'>
					<label for='lastname'> Last Name:</label>
					<input required type='text' name='lastname' id='lastname' accept='text'>
					<label for='email'> Email:</label>
					<input required type='text' name='email' id='email' accept='email'>
					<div class="buttons"><input type="button" id="fieldsetNext1" value="Next"></div>
				</fieldset>

				<fieldset class="fieldset2" id="fieldset2id">
					<legend>Account</legend>
					<label for='username'> Username:</label>
					<input required type='text' name='username' id='username' accept='text'>
					<label for='password' id="password"> Password:</label>
					<input required type='password' name='password' id='password' accept='text'>
					<div class="buttons"><input type="button" id="fieldsetBack2" value="Previous"><input type="button" id="fieldsetNext2" value="Next"></div>
				</fieldset>

				<fieldset class="fieldset3" id="fieldset3id">
					<legend>Gender</legend>
					<label for='man' >Man </label>
					<input required type='radio' name='gender' id='man' value='man' accept='text'>
					<label for='women'>Women </label>
					<input type='radio' name='gender' id='women' value="women" accept='text'>
					<label for='different'>Different <input type='radio' name='gender' id='different' value='different' accept='text'></label>
					<div class="button"><input class="button" type="button" id="fieldsetBack3" value="Previous"><button type="submit" id="signup">Sign Up</button></div>
				</fieldset>
			</form>

		</section>

	</main>
	<script src="/static/scripts/account.js"></script>
</body>
